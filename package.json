{
  "name": "commit-drafter",
  "displayName": "Commit Drafter",
  "description": "Generate conventional commit messages using LLMs.",
  "version": "1.0.0",
  "publisher": "JeremySu0818",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/JeremySu0818/Commit-Drafter"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commit-drafter.generate",
        "title": "Commit-Drafter: Generate Commit Message",
        "category": "Commit-Drafter",
        "icon": "$(sparkle)",
        "enablement": "!commit-drafter.isGenerating"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "commit-drafter.generate",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commit-drafter-activitybar",
          "title": "Commit Drafter",
          "icon": "$(sparkle)"
        }
      ]
    },
    "views": {
      "commit-drafter-activitybar": [
        {
          "type": "webview",
          "id": "commit-drafter.view",
          "name": "Commit Drafter",
          "icon": "$(sparkle)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "check-types": "tsc --noEmit",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.21.0",
    "ollama": "^0.6.3",
    "openai": "^4.77.0"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "esbuild": "^0.27.2",
    "eslint": "^8.41.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.1.3"
  }
}
