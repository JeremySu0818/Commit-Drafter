{
  "name": "auto-commit",
  "displayName": "Auto-Commit",
  "description": "Generate conventional commit messages using LLMs.",
  "version": "1.0.1",
  "publisher": "JeremySu0818",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/JeremySu0818/Auto-Commit"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auto-commit.generate",
        "title": "Auto-Commit: Generate Commit Message",
        "category": "Auto-Commit",
        "icon": "$(sparkle)",
        "enablement": "!auto-commit.isGenerating"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "auto-commit.generate",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "auto-commit-activitybar",
          "title": "Auto Commit",
          "icon": "$(sparkle)"
        }
      ]
    },
    "views": {
      "auto-commit-activitybar": [
        {
          "type": "webview",
          "id": "auto-commit.view",
          "name": "Auto Commit",
          "icon": "$(sparkle)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "20.x",
    "typescript": "^5.1.3",
    "eslint": "^8.41.0",
    "@typescript-eslint/parser": "^5.59.8",
    "@typescript-eslint/eslint-plugin": "^5.59.8"
  }
}
